<div class="container">

    <div class="col-md-12">
        <img src="../assets/img/burger_img.png" alt="Burger Image" width="200">
        <h1 class="text-center">
            <strong>Eat-Da-Burger!</strong>
        </h1>
    </div>

    <div class="col-md-6">
        <h2 class="text-center">Burgers To Eat</h2>
        <ul class="list-group">
            {{#each burgers}} {{#unless devoured}}
            <li class="list-group-item">
                {{burger_name}}
                <button data-id="{{id}}" class="devour-btn btn btn-warning btn-sm pull-right">Devour</button>
            </li>
            {{/unless}} {{/each}}
        </ul>
    </div>

    <div class="col-md-6">
        <h2 class="text-center">Devoured Burgers</h2>
        <ul class="list-group">
            {{#each burgers}} {{#if devoured}}
            <li class="list-group-item">
                {{burger_name}}
            </li>
            {{/if}} {{/each}}
        </ul>
    </div>

    <div class="col-md-12">
        <form id="add-burger" class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control mb-2 mr-sm-2" id="burger-name" placeholder="Add a burger!">
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </div>
        </form>
    </div>

</div>
